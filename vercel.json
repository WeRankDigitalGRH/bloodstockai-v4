{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api(.*)",       "dest": "api/index.py" },
    { "src": "/analyze",       "dest": "api/index.py" },
    { "src": "/status/(.*)",   "dest": "api/index.py" },
    { "src": "/results/(.*)",  "dest": "api/index.py" },
    { "src": "/history",       "dest": "api/index.py" },
    { "src": "/health",        "dest": "api/index.py" },
    { "src": "/jobs/(.*)",     "dest": "api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)",          "dest": "public/index.html" }
  ]
}
